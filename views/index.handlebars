<div class= "container">
<h1> Eat Da Burger</h1>
      <div class="row">
          <img src="/assets/images/download-1.jpg" alt="burger" class=" center-block">
      </div>

<div id = "create">
    <form action="/" method="POST">
     <input type="text" name="hamburgerorder"></input>
     <button type="submit">Create a scrumptious burger!</button>
   </form>
 </div>




<div class = "row">
  <div class="col-md-4 col-md-offset-1">
    <ul>
      <h3 class = "create"> Eat Me!</h3>
      {{#each orders}}
      {{#unless this.devoured}}

        <li>
         <p>{{this.hamburgerorder}}</p>
    								<form action='/orders/{{this.id}}?_method=PUT' method='POST'>
    									<!-- <input type='hidden' name='devoured' value='true'> -->
    									<button type='submit' class="btn btn-default">Devour me!</button>
    								</form>
        </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

<div class="col-md-4 col-md-offset-1">

<ul>
  <h3>Sorry, I have already been devoured!</h3>
  {{#each orders}}
    {{#if this.devoured}}
      <li>
        <p>{{this.hamburgerorder}}</p>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>
